import React from 'react';
import { Container, Box, Typography, Button, CssBaseline, FormControl, FormControlLabel, Radio, RadioGroup, FormLabel, Table, TableBody, TableCell, TableRow } from '@mui/material';

const IndexPage = () => {
  const statusData = {
    IT: 'approved',
    'Travel and Expenses': 'pending',
    Payroll: 'rejected',
    'GRE Team': 'approved',
    'Corporate Travel': 'pending',
    'Car Lease': 'rejected',
    Logistics: 'approved',
  };

  const getStatusColor = (status) => {
    switch (status) {
      case 'approved':
        return '#4CAF50'; // Green
      case 'pending':
        return '#FFC107'; // Orange
      case 'rejected':
        return '#F44336'; // Red
      default:
        return '#3F51B5'; // Primary color
    }
  };

  return (
    <Container maxWidth="sm">
      <CssBaseline /> {/* Apply MUI baseline styles */}
      <Box sx={{ mt: 8, display: 'flex', flexDirection: 'column', alignItems: 'center' }}>
        <Typography variant="h4" gutterBottom>
          Clearance Status
        </Typography>
        <Box
          sx={{
            mt: 4,
            p: 2,
            border: '1px solid #ccc',
            borderRadius: 4,
            display: 'flex',
            flexDirection: 'column',
            alignItems: 'center',
            backgroundColor: '#f0f0f0', // Set the background color for the border box
          }}
        >
          <FormControl component="fieldset" fullWidth margin="normal">
            <FormLabel component="legend">NCR Office Location</FormLabel>
            <RadioGroup aria-label="ncr-office-location" name="ncrOfficeLocation" defaultValue="Hyderabad">
              <FormControlLabel value="Hyderabad" control={<Radio />} label="Hyderabad" />
              <FormControlLabel value="Godrej Mumbai" control={<Radio />} label="Godrej Mumbai" />
            </RadioGroup>
          </FormControl>
        </Box>

        <Box
          sx={{
            mt: 4,
            p: 2,
            border: '1px solid #ccc',
            borderRadius: 4,
            display: 'flex',
            flexDirection: 'column',
            alignItems: 'center',
            backgroundColor: '#f0f0f0', // Set the background color for the border box
          }}
        >
          <FormControl component="fieldset" fullWidth margin="normal">
            <FormLabel component="legend">Experience</FormLabel>
            <Table>
              <TableBody>
                {/* Experience rows and columns will be added here */}
                <TableRow>
                  {/* ... (experience field content) */}
                </TableRow>
              </TableBody>
            </Table>
          </FormControl>
        </Box>

        <Box
          sx={{
            mt: 3,
            p: 2,
            border: '1px solid #ccc',
            borderRadius: 4,
            display: 'flex',
            flexDirection: 'column',
            alignItems: 'center',
            backgroundColor: '#f0f0f0', // Set the background color for the border box
          }}
        >
          {Object.keys(statusData).map((department) => (
            <Button
              key={department}
              variant="contained"
              color="primary"
              sx={{
                mt: 1,
                width: '100%',
                backgroundColor: getStatusColor(statusData[department]) + ' !important', // Apply the color directly and override MUI styles
              }}
            >
              {department}
            </Button>
          ))}
        </Box>
      </Box>
    </Container>
  );
};

export default IndexPage;
